.row
  .span5
    = simple_form_for discussion, :validate => true do |f|
      %h2= t "discussion_form.start_discussion"
      .control-group
        - if @user_groups
          %p= t "discussion_form.who"
          = f.collection_select :group_id, user_groups.sort{|a,b| a.full_name <=> b.full_name}, :id, :full_name
        - else
          = f.input :group_id, :as => :hidden
      = f.input :title
      = f.input :description
      = f.submit :class => "btn btn-large btn-info", id: "discussion-submit", :data => {:disable_with => t("discussion_form.starting")}