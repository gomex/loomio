.row
  .span12
    %h1= t("email_preferences_form.header")
    =simple_form_for(@user) do |f|
      %h2= t("email_preferences_form.daily_activity_summary")
      -if params[:unsubscribe_token]
        =hidden_field_tag :unsubscribe_token, params[:unsubscribe_token]
      =f.input :subscribed_to_daily_activity_email, :inline_label => t("email_preferences_form.daily_activity_subscription"), :label => false

      %h2= t("email_preferences_form.global_notifications")
      =f.input :subscribed_to_proposal_closure_notifications, :inline_label => t("email_preferences_form.proposal_closing_soon_subscription"), :label => false
      =f.input :subscribed_to_mention_notifications, :inline_label => t("email_preferences_form.mentions_subscription"), :label => false

      %h2= t("email_preferences_form.group_activity_notifications")
      %p= t("email_preferences_form.group_activity_details")

      .control-group
        =f.collection_check_boxes :group_email_preferences, @user.memberships.select{|m| m.group }.sort{|a,b| a.group_full_name <=> b.group_full_name}, :id, :group_full_name, {}, {:class => 'checkbox'}{ |input| input.label(:class => 'checkbox') { input.check_box + input.text } }

      =f.submit t("email_preferences_form.update_preferences"), :class => "btn btn-info btn-large"
